@model EHospitalization.Areas.Identity.Models.RegisterViewModel
@{
    Layout = null;
    ViewBag.Title = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="">
    <meta name="keywords" content="admin template, html 5 admin template , medixo admin , dashboard template, bootstrap 5 admin template, responsive admin template">
    <title>Medixo - Medical & Hospital Admin Template</title>
    <!-- shortcut icon-->
    <link rel="shortcut icon" href="~/Assets/AdminAssets/images/logo/icon-logo.png" type="image/x-icon">
    <!-- Fonts css-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <!-- Font awesome -->
    <link href="~/Assets/AdminAssets/css/vendor/font-awesome.css" rel="stylesheet">
    <link href="~/Assets/AdminAssets/css/vendor/themify-icons.css" rel="stylesheet">
    <link href="~/Assets/AdminAssets/css/vendor/icoicon.css" rel="stylesheet">
    <!-- Scrollbar-->
    <link href="~/Assets/AdminAssets/css/vendor/simplebar.css" rel="stylesheet">
    <!-- Bootstrap css-->
    <link href="~/Assets/AdminAssets/css/vendor/bootstrap.css" rel="stylesheet">
    <!-- Custom css-->
    <link href="~/Assets/AdminAssets/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- authentication start-->
    <section class="py-100">
        @using (Html.BeginForm("Register", "Account", new { area = "Identity" }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="codex-authbox">
                            <div class="auth-header">
                                <div class="codex-brand"><a href="index.html"><img class="img-fluid light-logo" src="~/Assets/AdminAssets/images/logo/logo.png" alt=""></a></div>
                                <h3> @Html.ActionLink("Create your account", "Register")</h3>
                                <h6>Already have an account? @Html.ActionLink("Already have an account?", "Login", new { @Class = "text-primary" })</h6>
                            </div>
                            <form action="#">

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                    <div class="input-group group-input">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control showhide-password", type = "password", PlaceHolder = "Please enter password" })
                                        <span class="input-group-text toggle-show fa fa-eye"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                                    <div class="input-group group-input">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control showhide-password", type = "password", PlaceHolder = "Confirm Password" })
                                        <span class="input-group-text toggle-show fa fa-eye"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" value="Register"><i class="fa fa-paper-plane"></i> Register</button>
                                </div>
                            </form>
                            <div class="auth-footer">
                                <h5 class="auth-with">or register in with</h5>
                                <ul class="login-list">
                                    <li><a class="bg-fb" href="javascript:void(0);"> <img class="img-fluid" src="~/Assets/AdminAssets/images/auth/1.png" alt="facebook">facebook</a></li>
                                    <li><a class="bg-google" href="javascript:void(0);"> <img class="img-fluid" src="~/Assets/AdminAssets/images/auth/2.png" alt="google">google</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
    <!-- authentication end-->
    <!-- main jquery-->
    <script src="~/Assets/AdminAssets/js/jquery-3.7.0.min.js"></script>
    <!-- Feather iocns js-->
    <script src="~/Assets/AdminAssets/js/icons/feather-icon/feather.js"></script>
    <!-- Bootstrap js-->
    <script src="~/Assets/AdminAssets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/AdminAssets/js/vendors/notify/bootstrap-notify.js"></script>
    <script src="~/Assets/AdminAssets/js/vendors/notify/bootstrap-customnotify.js"></script>
    <!-- customizer-->
    <script src="~/Assets/AdminAssets/js/customizer.js"></script>
    <!-- Scrollbar-->
    <script src="~/Assets/AdminAssets/js/vendors/simplebar.js"></script>
    <!-- Custom script-->
    <script src="~/Assets/AdminAssets/js/custom-script.js"></script>
</body>
</html>